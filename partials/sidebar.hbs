<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <header class="header" role="banner">
        {{! The logo of the blog }}
        <a href="/"><img id="blog" class="logo" src="{{@blog.logo}}"></a>

        {{! The title of the blog }}
        <h1 class="title"><a href="/">{{@blog.title}}</a></h1>

        {{! The description of the blog }}
        <p class="description">{{@blog.description}}</p>

        {{! Small separator between user details and menu }}
        <div class="separator"></div>

        {{! Navigation menu }}
        {{> "nav"}}

        {{! Social links }}
        <div class="social-icons">
            <a href="https://github.com/samanthadegges" class="icon icon-github-circled"></a>
            <a href="https://www.linkedin.com/in/samanthadegges" class="icon icon-linkedin"></a>
            <a href="http://www.samanthadegges.tumblr.com/" class="icon icon-tumblr"></a>
            <a href="https://twitter.com/samanthadegges" class="icon icon-twitter"></a>
            <a href="http://blog.samanthadegges.com/rss" class="icon icon-rss"></a>
            <a href="mailto:samanthadegges@gmail.com" class="icon icon-mail"></a>
        </div>
    </header>

    <footer class="site-footer">
        <section class="copyright">{{> "copyright"}}</section>
        <section class="poweredby">Published with <a class="ghost-link" href="https://ghost.org">Ghost</a> using the <a class="ghost-link" href="https://github.com/calincru/KISS">KISS</a> theme. Powered by <a class="ghost-link" href="https://digitalocean.com">DigitalOcean</a>.</section>
    </footer>
</div>
